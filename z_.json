.loader {
	width: 40px;
	height: 40px;
	position: relative;
	margin: 0 auto;
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 50%;
	border-top: 3px solid rgba(62, 150, 252, 0.8);
	border-right: 3px solid transparent;
  background-color: #ffffff;
	animation: loaderAnimation 1s ease-in-out infinite;
}